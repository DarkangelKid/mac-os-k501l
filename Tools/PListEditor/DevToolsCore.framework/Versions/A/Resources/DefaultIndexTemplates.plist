    {
        name = JavaDTWJavaClientAppIndex;
        hasJava = YES;
        hasObjC = NO;
        frameworks = ( "JavaDirectToWeb.framework" );
    },
    {
        name = JavaWebObjectsAppIndex;
        hasJava = YES;
        hasObjC = NO;
        frameworks = ( "JavaWebObjects.framework" );
    },
    {
        name = CocoaEOFIndex;
        hasJava = YES;
        hasObjC = YES;
        frameworks = ( "JavaEOCocoa.framework" );
    },
    {
        name = JavaIndex;
        hasJava = YES;
        hasObjC = NO;
    },
    {
        name = CocoaJavaIndex;
        hasJava = YES;
        hasObjC = YES;
    },
    {
        name = CocoaIndex;
        hasJava = NO;
        hasObjC = YES;
    },
    {
        name = CPlusPlusIndex;
        hasJava = NO;
        hasCpp = YES;
        frameworks = ( "Carbon.framework" );
    },
    {
        name = CarbonIndex;
        hasJava = NO;
        hasC = YES;
        frameworks = ( "Carbon.framework" );
    }
)
